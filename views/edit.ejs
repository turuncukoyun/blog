<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"> Edit <%=blogs.title %></div>
    <form class="ui form" action="/blogs/<%=blogs._id%>?_method=PUT" method="POST">
        <div class="required field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%-blogs.title%>" required>
        </div>
        <div class="required field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=blogs.image%>" required>    
        </div>
        <div class="required field">
            <label>Body</label>
            <textarea name="blog[body]" placeholder="blog things to write"><%-blogs.body%></textarea>
        </div>
        <button class="ui button" type="submit">Submit</button>
    </form>
</div>


<% include ./partials/footer %>